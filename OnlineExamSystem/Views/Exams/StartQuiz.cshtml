@model Entities.Concrete.Question
@{
    ViewData["Title"] = "StartQuiz";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sınavı Başlat</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css rel="stylesheet"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css rel="stylesheet"/>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container" style="margin:0 auto; margin-top:200px">

     
     <div class="row">
         @Html.DisplayFor(x=>x.QuestionText)
     </div>
    <div class="row">
        <h3>@Html.RadioButtonFor(x=>x.QuestionA, new {@class="form-control"}) @Model.QuestionA</h3>
    </div>
        <div class="row">
        <h3>@Html.RadioButtonFor(x=>x.QuestionB, new {@class="form-control"}) @Model.QuestionB</h3>
    </div>
       <div class="row">
        <h3>@Html.RadioButtonFor(x=>x.QuestionC, new {@class="form-control"}) @Model.QuestionC</h3>
    </div>
         <div class="row">
        <h3>@Html.RadioButtonFor(x=>x.QuestionD, new {@class="form-control"}) @Model.QuestionD</h3>
    </div>

    <div class="row">
        <input type="submit" value="submit" class="btn btn-primary"/>
    </div>
       </div>
    }
    <div>
       @Html.ActionLink("Back to list", "Index")
    </div>
</body>
</html>

