@using Entities.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>
<table>
    <tr>
        <th>Kullanıcı Adı </th>
        <th>Rol Ata</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td><a href="/Admin/Admin/AssignRole/@item.Id" class="btn btn-outline-dark">Rol Ata</a></td>
                </tr>
            }


</table>
<a href="/Adimn/Admin/Index/" class="btn btn-primary">Rol Listesine Dön</a>

