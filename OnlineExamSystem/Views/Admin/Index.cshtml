@using Entities.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<h5>Roller</h5>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>DURUM</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Admin/Admin/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Admin/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Admin/AdminRol/AddRole/" class="btn btn-outline-primary">Yeni Rol Ekle</a>
<a href="/Admin/AdminRol/UserRoleList/" class="btn btn-outline-info">Kullanıcı Rol Listesi</a>

<br />
